<hr>
<div id="nurseryRhyme">Click a button...</div>
<button id="btnNurseryRhyme">Generate nursery rhyme</button>
<button id="btnNurseryRhymeAjax">Generate nursery rhyme from AJAX</button>
<hr>

{{#section 'head'}}
    <script src="//cdn.bootcss.com/handlebars.js/4.0.11/handlebars.min.js"></script>

    <script id="nurseryRhythmTemplate" type="text/x-handlebars-template">
        Marry had a little <b>\{{animal}}</b>, its <b>\{{bodyPart}}</b> was <b>\{{adjective}}</b> as <b>\{{noun}}</b>.
    </script>
{{/section}}

{{#section 'jquery'}}
    <script type="text/javascript">
        $(function() {
            var nurseryRhythmTemplate = Handlebars.compile($('#nurseryRhythmTemplate').html());

            var $nurseryRhyme = $('#nurseryRhyme');

            $('#btnNurseryRhyme').on('click', function(evt) {
                evt.preventDefault();
                $nurseryRhyme.html(nurseryRhythmTemplate({
                    animal: 'basilisk',
                    bodyPart: 'tail',
                    adjective: 'sharp',
                    noun: 'a needle'
                }));
            });

            $('#btnNurseryRhymeAjax').on('click', function(evt) {
                evt.preventDefault();
                $.ajax('/data/nursery-rhythm', {
                    success: function(data) {
                        $nurseryRhyme.html(nurseryRhythmTemplate(data));
                    }
                });
            });
        });
    </script>
{{/section}}
